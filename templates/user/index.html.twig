{% extends 'base.html.twig' %}

{% block title %}QwePic - User Management{% endblock %}

{% block sidebar %}{% endblock %}
{% block main_classes %}min-h-screen{% endblock %}

{% block body %}
{% set currentRoute = app.request.attributes.get('_route') %}
<div class="min-h-screen bg-anti-flash-white px-4 py-6 lg:px-8 lg:py-8">
    <div class="max-w-7xl mx-auto">
        <div class="flex items-center justify-between mb-8">
            <div>
                <h1 class="font-poppins font-semibold text-2xl lg:text-3xl text-space-cadet">User Management</h1>
            </div>
            <a href="{{ path('app_user_new') }}"
               class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-vivid-sky-blue text-space-cadet text-sm font-medium shadow-sm hover:bg-blue-600 hover:text-anti-flash-white transition-all duration-200">
                <i class="fas fa-user-plus text-xs"></i>
                <span>Add User</span>
            </a>
        </div>

        <div class="flex flex-col lg:flex-row gap-8">
            <!-- Admin Panel Navigation -->
            <aside class="w-full lg:w-64 bg-white shadow-md rounded-2xl p-5 border border-gray-100">
                <h2 class="text-xs font-semibold tracking-widest text-slate-gray uppercase mb-4">Admin Panel</h2>
                <nav class="space-y-1">
                    {% set baseItemClasses = 'flex items-center gap-3 px-3 py-2 rounded-xl text-sm font-medium transition-all duration-200 cursor-pointer' %}

                    <a href="{{ path('app_dashboard') }}"
                       class="{{ baseItemClasses }} {% if currentRoute == 'app_dashboard' %}bg-space-cadet text-anti-flash-white shadow-md{% else %}text-space-cadet hover:bg-gray-200{% endif %}">
                        <span class="inline-flex items-center justify-center w-8 h-8 rounded-xl text-vivid-sky-blue">
                            <i class="fas fa-chart-line"></i>
                        </span>
                        <span>Overview</span>
                    </a>

                    <a href="{{ path('app_user_index') }}"
                       class="{{ baseItemClasses }} {% if currentRoute starts with 'app_user_' %}bg-vivid-sky-blue text-space-cadet shadow-md{% else %}text-space-cadet hover:bg-gray-200{% endif %}">
                        <span class="inline-flex items-center justify-center w-8 h-8 rounded-xl text-space-cadet">
                            <i class="fas fa-users"></i>
                        </span>
                        <span>User Management</span>
                    </a>

                    <a href="{{ path('app_album_index') }}"
                       class="{{ baseItemClasses }} {% if currentRoute starts with 'app_album_' %}bg-vivid-sky-blue text-anti-flash-white shadow-md{% else %}text-space-cadet hover:bg-gray-200{% endif %}">
                        <span class="inline-flex items-center justify-center w-8 h-8 rounded-xl bg-vivid-sky-blue/10 text-vivid-sky-blue">
                            <i class="fas fa-folder-open"></i>
                        </span>
                        <span>Albums Management</span>
                    </a>

                    <a href="{{ path('app_photo_index') }}"
                       class="{{ baseItemClasses }} {% if currentRoute starts with 'app_photo_' %}bg-vivid-sky-blue text-anti-flash-white shadow-md{% else %}text-space-cadet hover:bg-gray-200{% endif %}">
                        <span class="inline-flex items-center justify-center w-8 h-8 rounded-xl bg-vivid-sky-blue/10 text-vivid-sky-blue">
                            <i class="fas fa-image"></i>
                        </span>
                        <span>Photos Management</span>
                    </a>

                    <a href="{{ path('app_activity_log_index') }}"
                       class="{{ baseItemClasses }} {% if currentRoute starts with 'app_activity_log_' %}bg-vivid-sky-blue text-anti-flash-white shadow-md{% else %}text-space-cadet hover:bg-gray-200{% endif %}">
                        <span class="inline-flex items-center justify-center w-8 h-8 rounded-xl bg-vivid-sky-blue/10 text-vivid-sky-blue">
                            <i class="fas fa-clipboard-list"></i>
                        </span>
                        <span>Activity Logs</span>
                    </a>
                </nav>
            </aside>

            <!-- User table content -->
            <section class="flex-1">
                <div class="bg-white rounded-2xl shadow-md border border-gray-100 p-5">
                    <div class="flex items-center justify-between mb-4">
                        <h2 class="text-base font-semibold text-space-cadet">All Users</h2>
                        <span class="text-xs font-medium text-slate-gray">{{ users|length }} total</span>
                    </div>

                    {% if users is not empty %}
                        <div class="overflow-x-auto">
                            <table class="min-w-full text-left text-sm">
                                <thead class="border-b border-gray-200 text-slate-gray text-xs uppercase tracking-wider">
                                    <tr>
                                        <th scope="col" class="py-2 pr-4 font-medium">Username</th>
                                        <th scope="col" class="py-2 pr-4 font-medium">Email</th>
                                        <th scope="col" class="py-2 pr-4 font-medium">Role</th>
                                        <th scope="col" class="py-2 pr-4 font-medium">Status</th>
                                        <th scope="col" class="py-2 pr-0 font-medium text-right">Actions</th>
                                    </tr>
                                </thead>
                                <tbody class="divide-y divide-gray-100">
                                {% for user in users %}
                                    {% set roles = user.roles is iterable ? user.roles : [] %}
                                    {% if 'ROLE_ADMIN' in roles %}
                                        {% set primaryRole = 'Admin' %}
                                    {% elseif 'ROLE_PHOTOGRAPHER' in roles %}
                                        {% set primaryRole = 'Photographer' %}
                                    {% else %}
                                        {% set primaryRole = 'User' %}
                                    {% endif %}

                                    <tr class="hover:bg-gray-50 transition-colors">
                                        <td class="py-3 pr-4 text-space-cadet font-medium">{{ user.username }}</td>
                                        <td class="py-3 pr-4 text-slate-gray">{{ user.email }}</td>
                                        <td class="py-3 pr-4">
                                            <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-space-cadet/5 text-space-cadet">
                                                {{ primaryRole }}
                                            </span>
                                        </td>
                                        <td class="py-3 pr-4">
                                            {% if user.isActive %}
                                                <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-accent-coral text-anti-flash-white">
                                                    <i class="fas fa-check-circle mr-1"></i>Active
                                                </span>
                                            {% else %}
                                                <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-slate-gray text-anti-flash-white">
                                                    <i class="fas fa-ban mr-1"></i>Disabled
                                                </span>
                                            {% endif %}
                                        </td>
                                        <td class="py-3 pr-0 text-right">
                                            <div class="inline-flex items-center gap-2">
                                                <a href="{{ path('app_user_show', {'id': user.id}) }}"
                                                   class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-lg border border-gray-200 text-xs font-medium text-space-cadet hover:text-accent-coral transition-colors duration-200">
                                                    <i class="fas fa-eye text-[11px]"></i>
                                                    <span>View</span>
                                                </a>
                                                <a href="{{ path('app_user_edit', {'id': user.id}) }}"
                                                   class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-lg border border-accent-coral text-xs font-medium text-accent-coral hover:bg-accent-coral hover:text-anti-flash-white transition-colors duration-200">
                                                    <i class="fas fa-pen text-[11px]"></i>
                                                    <span>Edit</span>
                                                </a>
                                                
                                                {% if user.isActive %}
                                                    <form method="post" action="{{ path('app_user_disable', {'id': user.id}) }}" class="inline">
                                                        <input type="hidden" name="_token" value="{{ csrf_token('disable' ~ user.id) }}">
                                                        <button type="submit" 
                                                                class="cursor-pointer inline-flex items-center gap-1.5 px-3 py-1.5 rounded-lg border border-slate-gray text-xs font-medium text-slate-gray hover:bg-slate-gray hover:text-anti-flash-white transition-colors duration-200"
                                                                onclick="return confirm('Are you sure you want to disable this user? They will not be able to log in.');">
                                                            <i class="fas fa-ban text-[11px]"></i>
                                                            <span>Disable</span>
                                                        </button>
                                                    </form>
                                                {% else %}
                                                    <form method="post" action="{{ path('app_user_enable', {'id': user.id}) }}" class="inline">
                                                        <input type="hidden" name="_token" value="{{ csrf_token('enable' ~ user.id) }}">
                                                        <button type="submit" 
                                                                class="cursor-pointer inline-flex items-center gap-1.5 px-3 py-1.5 rounded-lg border border-accent-coral text-xs font-medium text-accent-coral hover:bg-accent-coral hover:text-anti-flash-white transition-colors duration-200"
                                                                onclick="return confirm('Are you sure you want to enable this user?');">
                                                            <i class="fas fa-check-circle text-[11px]"></i>
                                                            <span>Enable</span>
                                                        </button>
                                                    </form>
                                                {% endif %}
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <p class="text-sm text-slate-gray">No users found yet.</p>
                    {% endif %}
                </div>
            </section>
        </div>
    </div>
</div>
{% endblock %}
