{{ form_start(form, {'attr': {'class': 'space-y-6', 'id': form.vars.id}}) }}
    {{ form_errors(form) }}

    <div class="space-y-4">
        <div>
            {{ form_label(form.username, null, {
                'label_attr': {
                    'class': 'block text-sm font-medium text-space-cadet mb-1'
                }
            }) }}
            {{ form_widget(form.username, {
                'attr': {
                    'class': 'w-full px-3 py-2 border border-gray-300 rounded-lg text-sm text-space-cadet placeholder-slate-gray bg-anti-flash-white focus:outline-none focus:ring-2 focus:ring-vivid-sky-blue focus:border-vivid-sky-blue'
                }
            }) }}
            {{ form_errors(form.username) }}
        </div>

        <div>
            {{ form_label(form.email, null, {
                'label_attr': {
                    'class': 'block text-sm font-medium text-space-cadet mb-1'
                }
            }) }}
            {{ form_widget(form.email, {
                'attr': {
                    'class': 'w-full px-3 py-2 border border-gray-300 rounded-lg text-sm text-space-cadet placeholder-slate-gray bg-anti-flash-white focus:outline-none focus:ring-2 focus:ring-vivid-sky-blue focus:border-vivid-sky-blue'
                }
            }) }}
            {{ form_errors(form.email) }}
        </div>

        <div>
            {{ form_label(form.plainPassword, 'Password', {
                'label_attr': {
                    'class': 'block text-sm font-medium text-space-cadet mb-1'
                }
            }) }}
            {{ form_widget(form.plainPassword, {
                'attr': {
                    'class': 'w-full px-3 py-2 border border-gray-300 rounded-lg text-sm text-space-cadet placeholder-slate-gray bg-anti-flash-white focus:outline-none focus:ring-2 focus:ring-vivid-sky-blue focus:border-vivid-sky-blue'
                }
            }) }}
            <p class="mt-1 text-xs text-slate-gray">Leave blank to keep the current password.</p>
            {{ form_errors(form.plainPassword) }}
        </div>

        <div>
            <p class="block text-sm font-medium text-space-cadet mb-1">Roles</p>
            <div class="space-y-2">
                {% for choice in form.roles %}
                    <label class="flex items-center text-sm text-slate-gray cursor-pointer">
                        {{ form_widget(choice, {
                            'attr': {
                                'class': 'w-4 h-4 accent-accent-coral cursor-pointer'
                            }
                        }) }}
                        <span class="ml-2">{{ choice.vars.label }}</span>
                    </label>
                {% endfor %}
            </div>
            {{ form_errors(form.roles) }}
        </div>
    </div>
{{ form_end(form) }}
