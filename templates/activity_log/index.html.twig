{% extends 'base.html.twig' %}

{% block title %}QwePic - Activity Logs{% endblock %}

{% block sidebar %}{% endblock %}
{% block main_classes %}min-h-screen{% endblock %}

{% block body %}
{% set currentRoute = app.request.attributes.get('_route') %}
<div class="min-h-screen bg-anti-flash-white px-4 py-6 lg:px-8 lg:py-8">
    <div class="max-w-7xl mx-auto">
        <div class="flex items-center justify-between mb-8">
            <div>
                <h1 class="font-poppins font-semibold text-2xl lg:text-3xl text-space-cadet">Activity Logs</h1>
            </div>
            {# Logs are read-only, so no Add button here #}
        </div>

        <div class="flex flex-col lg:flex-row gap-8">
            <!-- Admin Panel Navigation -->
            <aside class="w-full lg:w-64 bg-white shadow-md rounded-2xl p-5 border border-gray-100">
                <h2 class="text-xs font-semibold tracking-widest text-slate-gray uppercase mb-4">Admin Panel</h2>
                <nav class="space-y-1">
                    {% set baseItemClasses = 'flex items-center gap-3 px-3 py-2 rounded-xl text-sm font-medium transition-all duration-200 cursor-pointer' %}

                    <a href="{{ path('app_dashboard') }}"
                       class="{{ baseItemClasses }} {% if currentRoute == 'app_dashboard' %}bg-space-cadet text-anti-flash-white shadow-md{% else %}text-space-cadet hover:bg-gray-200{% endif %}">
                        <span class="inline-flex items-center justify-center w-8 h-8 rounded-xl text-vivid-sky-blue">
                            <i class="fas fa-chart-line"></i>
                        </span>
                        <span>Overview</span>
                    </a>

                    <a href="{{ path('app_user_index') }}"
                       class="{{ baseItemClasses }} {% if currentRoute starts with 'app_user_' %}bg-vivid-sky-blue text-anti-flash-white shadow-md{% else %}text-space-cadet hover:bg-gray-200{% endif %}">
                        <span class="inline-flex items-center justify-center w-8 h-8 rounded-xl text-vivid-sky-blue">
                            <i class="fas fa-users"></i>
                        </span>
                        <span>User Management</span>
                    </a>

                    <a href="{{ path('app_album_index') }}"
                       class="{{ baseItemClasses }} {% if currentRoute starts with 'app_album_' %}bg-vivid-sky-blue text-anti-flash-white shadow-md{% else %}text-space-cadet hover:bg-gray-200{% endif %}">
                        <span class="inline-flex items-center justify-center w-8 h-8 rounded-xl text-vivid-sky-blue">
                            <i class="fas fa-folder-open"></i>
                        </span>
                        <span>Albums Management</span>
                    </a>

                    <a href="{{ path('app_photo_index') }}"
                       class="{{ baseItemClasses }} {% if currentRoute starts with 'app_photo_' %}bg-vivid-sky-blue text-anti-flash-white shadow-md{% else %}text-space-cadet hover:bg-gray-200{% endif %}">
                        <span class="inline-flex items-center justify-center w-8 h-8 rounded-xl bg-vivid-sky-blue/10 text-vivid-sky-blue">
                            <i class="fas fa-image"></i>
                        </span>
                        <span>Photos Management</span>
                    </a>

                    <a href="{{ path('app_activity_log_index') }}"
                       class="{{ baseItemClasses }} {% if currentRoute starts with 'app_activity_log_' %}bg-vivid-sky-blue text-space-cadet shadow-md{% else %}text-space-cadet hover:bg-gray-200{% endif %}">
                        <span class="inline-flex items-center justify-center w-8 h-8 rounded-xl text-space-cadet">
                            <i class="fas fa-clipboard-list"></i>
                        </span>
                        <span>Activity Logs</span>
                    </a>
                </nav>
            </aside>

            <!-- Activity logs table content -->
            <section class="flex-1">
                <!-- Filter Section -->
                <div class="bg-white rounded-2xl shadow-md border border-gray-100 p-5 mb-6">
                    <h3 class="text-sm font-semibold text-space-cadet mb-4">Filter Logs</h3>
                    <form method="get" action="{{ path('app_activity_log_index') }}" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
                        <!-- User Filter -->
                        <div>
                            <label for="user_id" class="block text-xs font-medium text-slate-gray mb-1">User</label>
                            <select name="user_id" id="user_id" class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm text-space-cadet bg-anti-flash-white focus:outline-none focus:ring-2 focus:ring-vivid-sky-blue focus:border-vivid-sky-blue">
                                <option value="">All Users</option>
                                {% for user in users %}
                                    <option value="{{ user.id }}" {% if filters.user_id == user.id %}selected{% endif %}>
                                        {{ user.username ?: user.email }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>

                        <!-- Action Filter -->
                        <div>
                            <label for="action" class="block text-xs font-medium text-slate-gray mb-1">Action</label>
                            <select name="action" id="action" class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm text-space-cadet bg-anti-flash-white focus:outline-none focus:ring-2 focus:ring-vivid-sky-blue focus:border-vivid-sky-blue">
                                <option value="">All Actions</option>
                                {% for act in actions %}
                                    <option value="{{ act }}" {% if filters.action == act %}selected{% endif %}>
                                        {{ act }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>

                        <!-- Start Date Filter -->
                        <div>
                            <label for="start_date" class="block text-xs font-medium text-slate-gray mb-1">Start Date</label>
                            <input type="date" name="start_date" id="start_date" value="{{ filters.start_date }}" class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm text-space-cadet bg-anti-flash-white focus:outline-none focus:ring-2 focus:ring-vivid-sky-blue focus:border-vivid-sky-blue">
                        </div>

                        <!-- End Date Filter -->
                        <div>
                            <label for="end_date" class="block text-xs font-medium text-slate-gray mb-1">End Date</label>
                            <input type="date" name="end_date" id="end_date" value="{{ filters.end_date }}" class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm text-space-cadet bg-anti-flash-white focus:outline-none focus:ring-2 focus:ring-vivid-sky-blue focus:border-vivid-sky-blue">
                        </div>

                        <!-- Filter Buttons -->
                        <div class="md:col-span-2 lg:col-span-4 flex gap-2">
                            <button type="submit" class="px-4 py-2 bg-vivid-sky-blue text-space-cadet text-sm font-medium rounded-lg hover:bg-blue-600 hover:text-anti-flash-white cursor-pointer transition-colors duration-200">
                                <i class="fas fa-filter mr-2"></i>Apply Filters
                            </button>
                            <a href="{{ path('app_activity_log_index') }}" class="px-4 py-2 bg-gray-200 text-space-cadet text-sm font-medium rounded-lg hover:bg-gray-300 hover:text-space-cadet cursor-pointer transition-colors duration-200">
                                <i class="fas fa-times mr-2"></i>Clear Filters
                            </a>
                        </div>
                    </form>
                </div>

                <div class="bg-white rounded-2xl shadow-md border border-gray-100 p-5">
                    <div class="flex items-center justify-between mb-4">
                        <h2 class="text-base font-semibold text-space-cadet">All Activity Logs</h2>
                        <span class="text-xs font-medium text-slate-gray">{{ activity_logs|length }} total</span>
                    </div>

                    {% if activity_logs is not empty %}
                        <div class="overflow-x-auto">
                            <table class="min-w-full text-left text-sm">
                                <thead class="border-b border-gray-200 text-slate-gray text-xs uppercase tracking-wider">
                                    <tr>
                                        <th scope="col" class="py-2 pr-4 font-medium">Time</th>
                                        <th scope="col" class="py-2 pr-4 font-medium">User</th>
                                        <th scope="col" class="py-2 pr-4 font-medium">Role</th>
                                        <th scope="col" class="py-2 pr-4 font-medium">Action</th>
                                        <th scope="col" class="py-2 pr-4 font-medium">Entity</th>
                                        <th scope="col" class="py-2 pr-0 font-medium text-right">Details</th>
                                    </tr>
                                </thead>
                                <tbody class="divide-y divide-gray-100">
                                {% for activity_log in activity_logs %}
                                    <tr class="hover:bg-gray-50 transition-colors">
                                        <td class="py-3 pr-4 text-slate-gray text-xs whitespace-nowrap">
                                            {{ activity_log.createdAt ? activity_log.createdAt|date('M j, Y H:i') : '—' }}
                                        </td>
                                        <td class="py-3 pr-4 text-space-cadet font-medium truncate max-w-[160px]">
                                            {{ activity_log.username ?: 'Unknown' }}
                                        </td>
                                        <td class="py-3 pr-4">
                                            {% if activity_log.role is iterable and activity_log.role|length > 0 %}
                                                <div class="flex flex-wrap items-center gap-1.5">
                                                    {% for role in activity_log.role %}
                                                        <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-space-cadet/5 text-space-cadet">
                                                            {{ role|replace({'ROLE_':''})|lower|title }}
                                                        </span>
                                                    {% endfor %}
                                                </div>
                                            {% else %}
                                                <span class="text-xs text-slate-gray">—</span>
                                            {% endif %}
                                        </td>
                                        <td class="py-3 pr-4 text-slate-gray truncate max-w-[200px]">
                                            {{ activity_log.action }}
                                        </td>
                                        <td class="py-3 pr-4 text-slate-gray text-xs">
                                            {% if activity_log.entityType %}
                                                {{ activity_log.entityType }}{% if activity_log.entityId is not null %} #{{ activity_log.entityId }}{% endif %}
                                            {% else %}
                                                —
                                            {% endif %}
                                        </td>
                                        <td class="py-3 pr-0 text-right">
                                            <div class="inline-flex items-center gap-2">
                                                <a href="{{ path('app_activity_log_show', {'id': activity_log.id}) }}"
                                                   class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-lg border border-gray-200 text-xs font-medium text-space-cadet hover:text-accent-coral transition-colors duration-200">
                                                    <i class="fas fa-eye text-[11px]"></i>
                                                    <span>View</span>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <p class="text-sm text-slate-gray">No activity logs recorded yet.</p>
                    {% endif %}
                </div>
            </section>
        </div>
    </div>
</div>
{% endblock %}
