<form method="post" action="{{ path('app_activity_log_delete', {'id': activity_log.id}) }}" onsubmit="return confirm('Are you sure you want to delete this log entry?');" class="inline-block">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ activity_log.id) }}">
    <button class="inline-flex items-center gap-2 px-4 py-2 rounded-full text-sm font-medium text-white bg-accent-coral hover:bg-red-600 shadow-sm transition-all duration-200 cursor-pointer">
        <i class="fas fa-trash-alt text-xs"></i>
        <span>Delete</span>
    </button>
</form>
