{% extends 'base.html.twig' %}

{% block title %}QwePic{% endblock %}

{% block body %}
<!-- Hero Section -->
<section class="bg-gradient-to-br from-gray-50 to-gray-100 py-8 lg:py-16 text-center border-b border-gray-200">
    <div class="max-w-4xl mx-auto px-4 lg:px-8">
        <h1 class="font-poppins font-bold text-3xl sm:text-4xl lg:text-5xl text-space-cadet mb-4 tracking-tight">Discover Amazing Photography</h1>

        {# Role-aware CTA block #}
        {% set currentUser = app.user %}
        {% set roles = currentUser and currentUser.roles is iterable ? currentUser.roles : [] %}

        <div class="mt-4 lg:mt-12 flex flex-wrap justify-center gap-3">
            {% if currentUser %}
                {# Logged-in users #}
                {% if 'ROLE_PHOTOGRAPHER' in roles or 'ROLE_ADMIN' in roles %}
                    {# Photographers/Admins: drive them to create content #}
                    <a href="{{ path('app_photo_new') }}"
                       class="px-6 py-3 rounded-full bg-vivid-sky-blue text-space-cadet text-sm lg:text-base font-semibold shadow-sm hover:bg-blue-600 hover:text-anti-flash-white hover:-translate-y-0.5 hover:shadow-md transition-all duration-200 cursor-pointer inline-flex items-center gap-2">
                        <i class="fas fa-camera"></i>
                        <span>Upload New Photo</span>
                    </a>
                    <a href="{{ path('app_album_new') }}"
                       class="px-6 py-3 rounded-full border border-gray-300 bg-white text-sm lg:text-base font-semibold text-space-cadet shadow-sm hover:border-accent-coral hover:text-accent-coral hover:-translate-y-0.5 hover:shadow-md transition-all duration-200 cursor-pointer inline-flex items-center gap-2">
                        <i class="fas fa-folder-plus"></i>
                        <span>Create New Album</span>
                    </a>
                {% else %}
                    {# Logged-in regular users/clients: push to hire photographers #}
                    <a href="{{ path('app_photographer_index') }}"
                       class="px-8 py-3 rounded-full bg-vivid-sky-blue text-space-cadet text-sm lg:text-base font-semibold shadow-sm hover:bg-blue-600 hover:text-anti-flash-white hover:-translate-y-0.5 hover:shadow-md transition-all duration-200 cursor-pointer inline-flex items-center gap-2">
                        <i class="fas fa-user-check"></i>
                        <span>Hire a Photographer</span>
                    </a>
                {% endif %}
            {% else %}
                {# Guests: dual CTA for both audiences #}
                <a href="{{ path('app_register') }}"
                   class="px-8 py-3 rounded-full bg-vivid-sky-blue text-space-cadet text-sm lg:text-base font-semibold shadow-sm hover:bg-blue-600 hover:text-anti-flash-white hover:-translate-y-0.5 hover:shadow-md transition-all duration-200 cursor-pointer inline-flex items-center gap-2">
                    <i class="fas fa-user-check"></i>
                    <span>Hire a Photographer</span>
                </a>
                <a href="{{ path('app_register') }}"
                   class="px-6 py-3 rounded-full border border-gray-300 bg-white text-sm lg:text-base font-semibold text-space-cadet shadow-sm hover:border-accent-coral hover:text-accent-coral hover:-translate-y-0.5 hover:shadow-md transition-all duration-200 cursor-pointer inline-flex items-center gap-2">
                    <i class="fas fa-camera-retro"></i>
                    <span>Join as Photographer</span>
                </a>
            {% endif %}
        </div>

        {# <p class="font-inter text-lg lg:text-xl text-slate-gray max-w-2xl mx-auto mb-8">Explore stunning photos from talented photographers around the world</p> #}

        <!-- Navigation Tabs -->
        {# <div class="flex flex-wrap gap-4 justify-center items-center mb-8">
            <a href="{{ path('app_home') }}" 
               class="px-6 py-3 border-2 rounded-full font-inter font-medium text-sm cursor-pointer transition-all duration-300 hover:-translate-y-0.5 hover:shadow-lg bg-accent-coral border-accent-coral text-white">
                All Photos
            </a>
            <a href="{{ path('app_photo_standalone') }}" 
               class="px-6 py-3 border-2 rounded-full font-inter font-medium text-sm cursor-pointer transition-all duration-300 hover:-translate-y-0.5 hover:shadow-lg border-slate-gray text-slate-gray bg-transparent hover:bg-slate-gray hover:text-white">
                Featured Photos
            </a>
            <a href="{{ path('app_photo_feed') }}" 
               class="px-6 py-3 border-2 rounded-full font-inter font-medium text-sm cursor-pointer transition-all duration-300 hover:-translate-y-0.5 hover:shadow-lg border-slate-gray text-slate-gray bg-transparent hover:bg-slate-gray hover:text-white">
                Photo Feed
            </a>
        </div> #}
    </div>
</section>

<!-- Photo Gallery -->
<div class="max-w-7xl mx-auto px-4 lg:px-8 py-8 lg:py-12">
    {% if photos %}
        <div class="columns-1 sm:columns-2 lg:columns-3 gap-4 lg:gap-6 space-y-4 lg:space-y-6" data-controller="scroll-animation">
            {% for photo in photos %}
                <!-- Photo Card -->
                <div class="break-inside-avoid mb-4 lg:mb-6 bg-white rounded-2xl shadow-card overflow-hidden transition-all duration-300 hover:shadow-xl hover:-translate-y-1" data-scroll-animation-target="item">
                    <!-- Photographer Header -->
                    <div class="flex items-center p-3 lg:p-4 pb-3 gap-3">
                        {% set photographer = photo.album ? photo.album.photographer : null %}
                        <div class="w-8 h-8 lg:w-10 lg:h-10 bg-slate-gray rounded-full flex items-center justify-center shrink-0">
                            <span class="text-white text-xs lg:text-sm font-semibold">
                                {{ photographer and photographer.email is defined ? photographer.email|first|upper : 'U' }}
                            </span>
                        </div>
                        <div class="flex-grow min-w-0">
                            <p class="font-semibold text-space-cadet text-xs lg:text-sm block truncate">
                                {{ photographer and photographer.email is defined ? photographer.email : 'Unknown photographer' }}
                            </p>
                            <p class="text-xs text-slate-gray">{{ photo.createdAt|date('M j, Y') }}</p>
                        </div>
                        {% if photo.album %}
                            <span class="text-xs bg-blue-100 text-blue-800 px-2 py-1 rounded-full hidden sm:inline-block max-w-[120px] truncate whitespace-nowrap shrink-0">{{ photo.album.title }}</span>
                        {% endif %}
                    </div>

                    <!-- Photo -->
                    <div class="relative group">
                        {# <a href="{{ path('app_photo_show', {'id': photo.id}) }}"> #}
                            {% if photo.thumbnailPath %}
                                <img src="{{ asset('uploads/thumbnails/' ~ photo.thumbnailPath) }}" 
                                     alt="{{ photo.title }}" 
                                     class="w-full h-auto object-cover transition-transform duration-300 group-hover:scale-[1.02]">
                            {% else %}
                                <img src="{{ asset('uploads/photos/' ~ photo.storagePath) }}" 
                                     alt="{{ photo.title }}" 
                                     class="w-full h-auto object-cover transition-transform duration-300 group-hover:scale-[1.02]">
                            {% endif %}
                        {# </a> #}
                    </div>

                    <!-- Photo Info -->
                    <div class="p-3 lg:p-4 pt-3">
                        <h3 class="font-heading font-bold text-base lg:text-lg text-space-cadet mb-2">{{ photo.title }}</h3>
                        {% if photo.caption %}
                            <p class="text-slate-gray text-sm leading-relaxed">{{ photo.caption|length > 100 ? photo.caption|slice(0, 100) ~ '...' : photo.caption }}</p>
                        {% endif %}
                    </div>
                </div>
            {% endfor %}
        </div>

        <!-- Load More Button -->
        {# <div class="text-center mt-12">
            <button class="px-8 py-3 bg-vivid-sky-blue text-white font-semibold rounded-lg hover:bg-blue-500 transition-all duration-300">
                Load More Photos
            </button>
        </div> #}
    {% else %}
        <!-- Empty State -->
        <div class="text-center py-12 lg:py-16">
            <div class="max-w-md mx-auto px-4">
                <svg class="w-12 h-12 lg:w-16 lg:h-16 mx-auto text-slate-gray mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                <h3 class="text-lg lg:text-xl font-semibold text-space-cadet mb-2">No photos yet</h3>
                <p class="text-slate-gray mb-6">Be the first to share your amazing photography!</p>
                {% if app.user %}
                    <a href="{{ path('app_photo_new') }}" 
                       class="inline-flex items-center px-4 lg:px-6 py-3 bg-vivid-sky-blue text-white font-semibold rounded-lg hover:bg-blue-500 transition-all duration-300 text-sm lg:text-base">
                        Upload Your First Photo
                    </a>
                {% endif %}
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}