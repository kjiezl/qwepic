{% extends 'base.html.twig' %}

{% block title %}QwePic - Booking Details{% endblock %}

{% block body %}
{% set currentRoute = app.request.attributes.get('_route') %}

<div class="min-h-screen bg-anti-flash-white px-4 py-6 lg:px-8 lg:py-8">
    <div class="max-w-7xl mx-auto">
        <div class="flex items-center justify-between mb-8">
            <div>
                <h1 class="font-poppins font-semibold text-2xl lg:text-3xl text-space-cadet">Booking #{{ booking.id }}</h1>
                <div class="mt-2 flex items-center gap-2">
                    <span class="text-sm text-slate-gray">Status:</span>
                    {% if booking.status == 'completed' %}
                        <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-vivid-sky-blue text-space-cadet">Completed</span>
                    {% elseif booking.status == 'accepted' %}
                        <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-accent-coral text-anti-flash-white">Accepted</span>
                    {% elseif booking.status == 'rejected' %}
                        <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-space-cadet text-anti-flash-white">Rejected</span>
                    {% elseif booking.status == 'requested' %}
                        <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-slate-gray text-anti-flash-white">Requested</span>
                    {% else %}
                        <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-space-cadet/5 text-space-cadet">{{ booking.status }}</span>
                    {% endif %}
                </div>
            </div>
            <div class="flex items-center justify-end">
                <a href="{{ path('app_admin_booking_index') }}"
                   class="inline-flex items-center gap-2 px-3 py-1.5 rounded-full border border-gray-200 text-[11px] font-medium text-space-cadet hover:text-accent-coral transition-colors duration-200">
                    <i class="fas fa-arrow-left text-[10px]"></i>
                    <span>Back</span>
                </a>
            </div>
        </div>

        <div class="flex flex-col lg:flex-row gap-8">
            <aside class="w-full lg:w-64 bg-white shadow-md rounded-2xl p-5 border border-gray-100">
                <h2 class="text-xs font-semibold tracking-widest text-slate-gray uppercase mb-4">Admin Panel</h2>
                <nav class="space-y-1">
                    {% set baseItemClasses = 'flex items-center gap-3 px-3 py-2 rounded-xl text-sm font-medium transition-all duration-200 cursor-pointer' %}

                    <a href="{{ path('app_dashboard') }}"
                       class="{{ baseItemClasses }} {% if currentRoute == 'app_dashboard' %}bg-vivid-sky-blue text-space-cadet shadow-md{% else %}text-space-cadet hover:bg-gray-200{% endif %}">
                        <span class="inline-flex items-center justify-center w-8 h-8 rounded-xl bg-vivid-sky-blue/10 text-vivid-sky-blue">
                            <i class="fas fa-chart-line"></i>
                        </span>
                        <span>Overview</span>
                    </a>

                    <a href="{{ path('app_user_index') }}"
                       class="{{ baseItemClasses }} {% if currentRoute starts with 'app_user_' %}bg-vivid-sky-blue text-anti-flash-white shadow-md{% else %}text-space-cadet hover:bg-gray-200{% endif %}">
                        <span class="inline-flex items-center justify-center w-8 h-8 rounded-xl bg-vivid-sky-blue/10 text-vivid-sky-blue">
                            <i class="fas fa-users"></i>
                        </span>
                        <span>User Management</span>
                    </a>

                    <a href="{{ path('app_album_index') }}"
                       class="{{ baseItemClasses }} {% if currentRoute starts with 'app_album_' %}bg-vivid-sky-blue text-anti-flash-white shadow-md{% else %}text-space-cadet hover:bg-gray-200{% endif %}">
                        <span class="inline-flex items-center justify-center w-8 h-8 rounded-xl bg-vivid-sky-blue/10 text-vivid-sky-blue">
                            <i class="fas fa-folder-open"></i>
                        </span>
                        <span>Albums Management</span>
                    </a>

                    <a href="{{ path('app_photo_index') }}"
                       class="{{ baseItemClasses }} {% if currentRoute starts with 'app_photo_' %}bg-vivid-sky-blue text-anti-flash-white shadow-md{% else %}text-space-cadet hover:bg-gray-200{% endif %}">
                        <span class="inline-flex items-center justify-center w-8 h-8 rounded-xl bg-vivid-sky-blue/10 text-vivid-sky-blue">
                            <i class="fas fa-image"></i>
                        </span>
                        <span>Photos Management</span>
                    </a>

                    <a href="{{ path('app_admin_booking_index') }}"
                       class="{{ baseItemClasses }} {% if currentRoute starts with 'app_admin_booking_' %}bg-vivid-sky-blue text-space-cadet shadow-md{% else %}text-space-cadet hover:bg-gray-200{% endif %}">
                        <span class="inline-flex items-center justify-center w-8 h-8 rounded-xl text-space-cadet">
                            <i class="fas fa-calendar-check"></i>
                        </span>
                        <span>Bookings</span>
                    </a>

                    <a href="{{ path('app_activity_log_index') }}"
                       class="{{ baseItemClasses }} {% if currentRoute starts with 'app_activity_log_' %}bg-vivid-sky-blue text-anti-flash-white shadow-md{% else %}text-space-cadet hover:bg-gray-200{% endif %}">
                        <span class="inline-flex items-center justify-center w-8 h-8 rounded-xl bg-vivid-sky-blue/10 text-vivid-sky-blue">
                            <i class="fas fa-clipboard-list"></i>
                        </span>
                        <span>Activity Logs</span>
                    </a>
                </nav>
            </aside>

            <section class="flex-1">
                <div class="bg-white rounded-2xl shadow-md border border-gray-100 p-6 space-y-5">
                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                        <div>
                            <p class="text-xs font-medium text-slate-gray uppercase tracking-widest">Client</p>
                            <p class="mt-1 text-sm text-space-cadet">{{ booking.client.username ?: booking.client.email }}</p>
                        </div>
                        <div>
                            <p class="text-xs font-medium text-slate-gray uppercase tracking-widest">Photographer</p>
                            <p class="mt-1 text-sm text-space-cadet">{{ booking.photographer.username ?: booking.photographer.email }}</p>
                        </div>
                    </div>

                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                        <div>
                            <p class="text-xs font-medium text-slate-gray uppercase tracking-widest">Start</p>
                            <p class="mt-1 text-sm text-space-cadet">{{ booking.startAt ? booking.startAt|date('M j, Y H:i') : '—' }}</p>
                        </div>
                        <div>
                            <p class="text-xs font-medium text-slate-gray uppercase tracking-widest">End</p>
                            <p class="mt-1 text-sm text-space-cadet">{{ booking.endAt ? booking.endAt|date('M j, Y H:i') : '—' }}</p>
                        </div>
                    </div>

                    <div>
                        <p class="text-xs font-medium text-slate-gray uppercase tracking-widest">Location</p>
                        <p class="mt-1 text-sm text-space-cadet">{{ booking.location ?: '—' }}</p>
                    </div>

                    <div>
                        <p class="text-xs font-medium text-slate-gray uppercase tracking-widest">Notes / Terms</p>
                        <p class="mt-1 text-sm text-space-cadet whitespace-pre-line">{{ booking.notes ?: '—' }}</p>
                    </div>

                    {% if booking.status == 'rejected' %}
                        <div class="pt-4 border-t border-gray-100">
                            <p class="text-xs font-medium text-slate-gray uppercase tracking-widest">Rejection reason</p>
                            <p class="mt-1 text-sm text-accent-coral whitespace-pre-line">{{ booking.rejectionReason ?: '—' }}</p>
                        </div>
                    {% endif %}

                    <div class="pt-4 border-t border-gray-100">
                        <div class="flex items-center justify-between mb-3">
                            <h2 class="text-base font-semibold text-space-cadet">Attachments</h2>
                        </div>

                        {% if attachments is not empty %}
                            <ul class="divide-y divide-gray-100">
                                {% for att in attachments %}
                                    <li class="py-3">
                                        {% if att.album %}
                                            {% set album = att.album %}
                                            <div class="flex items-center gap-3">
                                                <div class="w-12 h-12 rounded-xl bg-gray-100 overflow-hidden flex items-center justify-center shrink-0">
                                                    {% if album.coverImagePath %}
                                                        <img src="{{ asset(album.coverImagePath) }}" alt="{{ album.title }}" class="w-full h-full object-cover">
                                                    {% else %}
                                                        <i class="fas fa-folder-open text-slate-gray"></i>
                                                    {% endif %}
                                                </div>
                                                <div class="min-w-0">
                                                    <p class="text-sm font-semibold text-space-cadet truncate">Album: {{ album.title }}</p>
                                                    <p class="text-xs text-slate-gray truncate">{{ album.description ?: '—' }}</p>
                                                </div>
                                            </div>
                                        {% elseif att.photo %}
                                            {% set photo = att.photo %}
                                            <div class="flex items-center gap-3">
                                                <div class="w-12 h-12 rounded-xl bg-gray-100 overflow-hidden flex items-center justify-center shrink-0">
                                                    {% if photo.thumbnailPath %}
                                                        <img src="{{ asset('uploads/thumbnails/' ~ photo.thumbnailPath) }}" alt="{{ photo.title }}" class="w-full h-full object-cover">
                                                    {% else %}
                                                        <img src="{{ asset('uploads/photos/' ~ photo.storagePath) }}" alt="{{ photo.title }}" class="w-full h-full object-cover">
                                                    {% endif %}
                                                </div>
                                                <div class="min-w-0">
                                                    <p class="text-sm font-semibold text-space-cadet truncate">Photo: {{ photo.title }}</p>
                                                    {% if photo.caption %}
                                                        <p class="text-xs text-slate-gray truncate">{{ photo.caption }}</p>
                                                    {% endif %}
                                                </div>
                                            </div>
                                        {% else %}
                                            <p class="text-sm text-slate-gray">Attachment</p>
                                        {% endif %}
                                    </li>
                                {% endfor %}
                            </ul>
                        {% else %}
                            <p class="text-sm text-slate-gray">No attachments.</p>
                        {% endif %}
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
{% endblock %}
