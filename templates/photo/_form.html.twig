{{ form_start(form, {'attr': {'class': 'space-y-6', 'id': form.vars.id}}) }}
    <div class="space-y-4">
        <div>
            {{ form_label(form.title, null, {
                'label_attr': {
                    'class': 'block text-sm font-medium text-space-cadet mb-1'
                }
            }) }}
            {{ form_widget(form.title, {
                'attr': {
                    'class': 'w-full px-3 py-2 border border-gray-300 rounded-lg text-sm text-space-cadet placeholder-slate-gray bg-anti-flash-white focus:outline-none focus:ring-2 focus:ring-vivid-sky-blue focus:border-vivid-sky-blue'
                }
            }) }}
            {% set fieldErrors = form_errors(form.title) %}
            {% if fieldErrors is not empty %}
                <div class="mt-1 text-xs text-accent-coral">
                    {{ fieldErrors|striptags }}
                </div>
            {% endif %}
        </div>

        <div>
            {{ form_label(form.caption, null, {
                'label_attr': {
                    'class': 'block text-sm font-medium text-space-cadet mb-1'
                }
            }) }}
            {{ form_widget(form.caption, {
                'attr': {
                    'class': 'w-full px-3 py-2 border border-gray-300 rounded-lg text-sm text-space-cadet placeholder-slate-gray bg-anti-flash-white focus:outline-none focus:ring-2 focus:ring-vivid-sky-blue focus:border-vivid-sky-blue min-h-[96px]'
                }
            }) }}
            {% set fieldErrors = form_errors(form.caption) %}
            {% if fieldErrors is not empty %}
                <div class="mt-1 text-xs text-accent-coral">
                    {{ fieldErrors|striptags }}
                </div>
            {% endif %}
        </div>

        <div>
            {{ form_label(form.imageFile, 'Photo file', {
                'label_attr': {
                    'class': 'block text-sm font-medium text-space-cadet mb-1'
                }
            }) }}
            {{ form_widget(form.imageFile, {
                'attr': {
                    'class': 'w-full text-sm text-space-cadet'
                }
            }) }}
            {% set fieldErrors = form_errors(form.imageFile) %}
            {% if fieldErrors is not empty %}
                <div class="mt-1 text-xs text-accent-coral">
                    {{ fieldErrors|striptags }}
                </div>
            {% endif %}
        </div>

        <div>
            <p class="block text-sm font-medium text-space-cadet mb-1">Visibility</p>
            <label class="flex items-center text-sm text-slate-gray cursor-pointer">
                {{ form_widget(form.is_public, {
                    'attr': {
                        'class': 'w-4 h-4 accent-accent-coral cursor-pointer'
                    }
                }) }}
                <span class="ml-2">Public photo</span>
            </label>
            {% set fieldErrors = form_errors(form.is_public) %}
            {% if fieldErrors is not empty %}
                <div class="mt-1 text-xs text-accent-coral">
                    {{ fieldErrors|striptags }}
                </div>
            {% endif %}
        </div>

        <div>
            {{ form_label(form.album, 'Album', {
                'label_attr': {
                    'class': 'block text-sm font-medium text-space-cadet mb-1'
                }
            }) }}
            {{ form_widget(form.album, {
                'attr': {
                    'class': 'w-full px-3 py-2 border border-gray-300 rounded-lg text-sm text-space-cadet bg-anti-flash-white focus:outline-none focus:ring-2 focus:ring-vivid-sky-blue focus:border-vivid-sky-blue cursor-pointer'
                }
            }) }}
            {% set fieldErrors = form_errors(form.album) %}
            {% if fieldErrors is not empty %}
                <div class="mt-1 text-xs text-accent-coral">
                    {{ fieldErrors|striptags }}
                </div>
            {% endif %}
        </div>
    </div>

    <div class="hidden">
        {{ form_rest(form) }}
    </div>
{{ form_end(form) }}
