{% extends 'base.html.twig' %}

{% block title %}QwePic - Photo Details{% endblock %}

{% block body %}
{% set currentRoute = app.request.attributes.get('_route') %}
{% set isAdmin = is_granted('ROLE_ADMIN') %}
<div class="min-h-screen bg-anti-flash-white px-4 py-6 lg:px-8 lg:py-8">
    <div class="max-w-7xl mx-auto">
        <div class="flex items-center justify-between mb-8">
            <div>
                <h1 class="font-poppins font-semibold text-2xl lg:text-3xl text-space-cadet">Photo Details</h1>
            </div>
            <div class="flex items-center gap-2">
                <a href="{{ path('app_photo_index') }}"
                   class="inline-flex items-center gap-2 px-4 py-2 rounded-full border border-gray-300 bg-white text-sm font-medium text-space-cadet shadow-sm hover:bg-anti-flash-white hover:border-accent-coral hover:text-accent-coral transition-all duration-200">
                    <i class="fas fa-arrow-left text-xs"></i>
                    <span>Back to Photos</span>
                </a>
                <a href="{{ path('app_photo_edit', {'id': photo.id}) }}"
                   class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-vivid-sky-blue text-sm font-medium text-space-cadet shadow-sm hover:bg-blue-600 hover:text-anti-flash-white transition-all duration-200">
                    <i class="fas fa-pen text-xs"></i>
                    <span>Edit</span>
                </a>
            </div>
        </div>

        <div class="flex flex-col lg:flex-row gap-8">
            <aside class="w-full lg:w-64 bg-white shadow-md rounded-2xl p-5 border border-gray-100">
                {% if isAdmin %}
                    <h2 class="text-xs font-semibold tracking-widest text-slate-gray uppercase mb-4">Admin Panel</h2>
                    <nav class="space-y-1">
                        {% set baseItemClasses = 'flex items-center gap-3 px-3 py-2 rounded-xl text-sm font-medium transition-all duration-200 cursor-pointer' %}

                        <a href="{{ path('app_dashboard') }}"
                           class="{{ baseItemClasses }} {% if currentRoute == 'app_dashboard' %}bg-space-cadet text-anti-flash-white shadow-md{% else %}text-space-cadet hover:bg-gray-200{% endif %}">
                            <span class="inline-flex items-center justify-center w-8 h-8 rounded-xl text-vivid-sky-blue">
                                <i class="fas fa-chart-line"></i>
                            </span>
                            <span>Overview</span>
                        </a>

                        <a href="{{ path('app_user_index') }}"
                           class="{{ baseItemClasses }} {% if currentRoute starts with 'app_user_' %}bg-vivid-sky-blue text-anti-flash-white shadow-md{% else %}text-space-cadet hover:bg-gray-200{% endif %}">
                            <span class="inline-flex items-center justify-center w-8 h-8 rounded-xl text-vivid-sky-blue">
                                <i class="fas fa-users"></i>
                            </span>
                            <span>User Management</span>
                        </a>

                        <a href="{{ path('app_album_index') }}"
                           class="{{ baseItemClasses }} {% if currentRoute starts with 'app_album_' %}bg-vivid-sky-blue text-space-cadet shadow-md{% else %}text-space-cadet hover:bg-gray-200{% endif %}">
                            <span class="inline-flex items-center justify-center w-8 h-8 rounded-xl text-vivid-sky-blue">
                                <i class="fas fa-folder-open"></i>
                            </span>
                            <span>Albums Management</span>
                        </a>

                        <a href="{{ path('app_photo_index') }}"
                           class="{{ baseItemClasses }} {% if currentRoute starts with 'app_photo_' %}bg-vivid-sky-blue text-space-cadet shadow-md{% else %}text-space-cadet hover:bg-gray-200{% endif %}">
                            <span class="inline-flex items-center justify-center w-8 h-8 rounded-xl text-space-cadet">
                                <i class="fas fa-image"></i>
                            </span>
                            <span>Photos Management</span>
                        </a>

                        <a href="{{ path('app_admin_booking_index') }}"
                           class="{{ baseItemClasses }} {% if currentRoute starts with 'app_admin_booking_' %}bg-vivid-sky-blue text-space-cadet shadow-md{% else %}text-space-cadet hover:bg-gray-200{% endif %}">
                            <span class="inline-flex items-center justify-center w-8 h-8 rounded-xl text-vivid-sky-blue">
                                <i class="fas fa-calendar-check"></i>
                            </span>
                            <span>Bookings</span>
                        </a>

                        <a href="{{ path('app_activity_log_index') }}"
                           class="{{ baseItemClasses }} {% if currentRoute starts with 'app_activity_log_' %}bg-vivid-sky-blue text-anti-flash-white shadow-md{% else %}text-space-cadet hover:bg-gray-200{% endif %}">
                            <span class="inline-flex items-center justify-center w-8 h-8 rounded-xl bg-vivid-sky-blue/10 text-vivid-sky-blue">
                                <i class="fas fa-clipboard-list"></i>
                            </span>
                            <span>Activity Logs</span>
                        </a>
                    </nav>
                {% else %}
                    <h2 class="text-xs font-semibold tracking-widest text-slate-gray uppercase mb-4">Photographer Panel</h2>
                    <nav class="space-y-1">
                        {% set baseItemClasses = 'flex items-center gap-3 px-3 py-2 rounded-xl text-sm font-medium transition-all duration-200 cursor-pointer' %}

                        <a href="{{ path('app_dashboard') }}"
                           class="{{ baseItemClasses }} {% if currentRoute == 'app_dashboard' %}bg-vivid-sky-blue text-space-cadet shadow-md{% else %}text-space-cadet hover:bg-gray-100{% endif %}">
                            <span class="inline-flex items-center justify-center w-8 h-8 rounded-xl text-vivid-sky-blue">
                                <i class="fas fa-chart-line"></i>
                            </span>
                            <span>Overview</span>
                        </a>

                        <a href="{{ path('app_album_index') }}"
                           class="{{ baseItemClasses }} {% if currentRoute starts with 'app_album_' %}bg-vivid-sky-blue text-space-cadet shadow-md{% else %}text-space-cadet hover:bg-gray-100{% endif %}">
                            <span class="inline-flex items-center justify-center w-8 h-8 rounded-xl text-vivid-sky-blue">
                                <i class="fas fa-folder-open"></i>
                            </span>
                            <span>My Albums</span>
                        </a>

                        <a href="{{ path('app_photo_index') }}"
                           class="{{ baseItemClasses }} {% if currentRoute starts with 'app_photo_' %}bg-vivid-sky-blue text-space-cadet shadow-md{% else %}text-space-cadet hover:bg-gray-100{% endif %}">
                            <span class="inline-flex items-center justify-center w-8 h-8 rounded-xl text-space-cadet">
                                <i class="fas fa-image"></i>
                            </span>
                            <span>My Photos</span>
                        </a>

                        <a href="{{ path('app_photographer_booking_index') }}"
                           class="{{ baseItemClasses }} {% if currentRoute starts with 'app_photographer_booking_' %}bg-vivid-sky-blue text-space-cadet shadow-md{% else %}text-space-cadet hover:bg-gray-100{% endif %}">
                            <span class="inline-flex items-center justify-center w-8 h-8 rounded-xl text-vivid-sky-blue">
                                <i class="fas fa-calendar-check"></i>
                            </span>
                            <span>Bookings</span>
                        </a>
                    </nav>
                {% endif %}
            </aside>

            <section class="flex-1">
                <div class="bg-white rounded-2xl shadow-md border border-gray-100 p-6 space-y-4">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-xs font-medium text-slate-gray uppercase tracking-widest">Title</p>
                            <p class="mt-1 text-base font-semibold text-space-cadet">{{ photo.title }}</p>
                        </div>
                        <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-space-cadet/5 text-space-cadet">
                            ID #{{ photo.id }}
                        </span>
                    </div>

                    <div>
                        <p class="text-xs font-medium text-slate-gray uppercase tracking-widest">Album</p>
                        <p class="mt-1 text-base text-space-cadet">
                            {% if photo.album %}
                                {{ photo.album.title is not empty ? photo.album.title : ('Album #' ~ photo.album.id) }}
                            {% else %}
                                N/A
                            {% endif %}
                        </p>
                    </div>

                    <div>
                        <p class="text-xs font-medium text-slate-gray uppercase tracking-widest">Preview</p>
                        <div class="mt-2 max-w-3xl mx-auto rounded-xl overflow-hidden border border-gray-100 bg-gray-50">
                            <div class="h-80 bg-gray-100">
                                {% if photo.thumbnailPath %}
                                    <img src="{{ asset('uploads/thumbnails/' ~ photo.thumbnailPath) }}" alt="{{ photo.title }}" class="w-full h-full object-contain md:object-cover">
                                {% else %}
                                    <img src="{{ asset('uploads/photos/' ~ photo.storagePath) }}" alt="{{ photo.title }}" class="w-full h-full object-contain md:object-cover">
                                {% endif %}
                            </div>
                        </div>
                    </div>

                    <div>
                        <p class="text-xs font-medium text-slate-gray uppercase tracking-widest">Caption</p>
                        <p class="mt-1 text-sm text-space-cadet whitespace-pre-line">{{ photo.caption|default('No caption provided.') }}</p>
                    </div>

                    <div>
                        <p class="text-xs font-medium text-slate-gray uppercase tracking-widest">Storage Path</p>
                        <p class="mt-1 text-sm text-space-cadet break-all">{{ photo.storagePath|default('Not set') }}</p>
                    </div>

                    <div>
                        <p class="text-xs font-medium text-slate-gray uppercase tracking-widest">Thumbnail Path</p>
                        <p class="mt-1 text-sm text-space-cadet break-all">{{ photo.thumbnailPath|default('Not set') }}</p>
                    </div>

                    <div>
                        <p class="text-xs font-medium text-slate-gray uppercase tracking-widest">Visibility</p>
                        <div class="mt-1">
                            {% if photo.isPublic %}
                                <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-accent-coral text-anti-flash-white">
                                    Public
                                </span>
                            {% else %}
                                <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-slate-gray text-anti-flash-white">
                                    Private
                                </span>
                            {% endif %}
                        </div>
                    </div>

                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                        <div>
                            <p class="text-xs font-medium text-slate-gray uppercase tracking-widest">Created At</p>
                            <p class="mt-1 text-sm text-space-cadet">{{ photo.createdAt ? photo.createdAt|date('M j, Y H:i') : '—' }}</p>
                        </div>
                        <div>
                            <p class="text-xs font-medium text-slate-gray uppercase tracking-widest">Updated At</p>
                            <p class="mt-1 text-sm text-space-cadet">{{ photo.updatedAt ? photo.updatedAt|date('M j, Y H:i') : '—' }}</p>
                        </div>
                    </div>

                    <div class="mt-4 pt-4 border-t border-gray-100 flex justify-end">
                        {{ include('photo/_delete_form.html.twig') }}
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
{% endblock %}
