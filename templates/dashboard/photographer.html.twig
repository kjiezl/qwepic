{% extends 'base.html.twig' %}

{% block title %}QwePic - Photographer Dashboard{% endblock %}

{% block body %}
{% set currentRoute = app.request.attributes.get('_route') %}

<div class="min-h-screen bg-anti-flash-white px-4 py-6 lg:px-8 lg:py-8">
    <div class="max-w-7xl mx-auto">
        <!-- Header with title and back button -->
        <div class="flex items-center justify-between mb-8">
            <div>
                <h1 class="font-poppins font-semibold text-2xl lg:text-3xl text-space-cadet">Photographer Dashboard</h1>
            </div>
            <a href="{{ path('app_home') }}"
               class="inline-flex items-center gap-2 px-4 py-2 rounded-full border border-gray-300 bg-white text-sm font-medium text-space-cadet shadow-sm hover:bg-anti-flash-white hover:border-accent-coral hover:text-accent-coral transition-all duration-200">
                <i class="fas fa-arrow-left text-xs"></i>
                <span>Back to Home</span>
            </a>
        </div>

        <div class="flex flex-col lg:flex-row gap-8">
            <!-- Photographer Panel Navigation -->
            <aside class="w-full lg:w-64 bg-white shadow-md rounded-2xl p-5 border border-gray-100">
                <h2 class="text-xs font-semibold tracking-widest text-slate-gray uppercase mb-4">Photographer Panel</h2>
                <nav class="space-y-1">
                    {% set baseItemClasses = 'flex items-center gap-3 px-3 py-2 rounded-xl text-sm font-medium transition-all duration-200 cursor-pointer' %}

                    <a href="{{ path('app_dashboard') }}"
                       class="{{ baseItemClasses }} {% if currentRoute == 'app_dashboard' %}bg-vivid-sky-blue text-space-cadet shadow-md{% else %}text-space-cadet hover:bg-gray-100{% endif %}">
                        <span class="inline-flex items-center justify-center w-8 h-8 rounded-xl text-space-cadet">
                            <i class="fas fa-chart-line"></i>
                        </span>
                        <span>Overview</span>
                    </a>

                    <a href="{{ path('app_album_index') }}"
                       class="{{ baseItemClasses }} {% if currentRoute starts with 'app_album_' %}bg-vivid-sky-blue text-space-cadet shadow-md{% else %}text-space-cadet hover:bg-gray-100{% endif %}">
                        <span class="inline-flex items-center justify-center w-8 h-8 rounded-xl text-vivid-sky-blue">
                            <i class="fas fa-folder-open"></i>
                        </span>
                        <span>My Albums</span>
                    </a>

                    <a href="{{ path('app_photo_index') }}"
                       class="{{ baseItemClasses }} {% if currentRoute starts with 'app_photo_' %}bg-vivid-sky-blue text-space-cadet shadow-md{% else %}text-space-cadet hover:bg-gray-100{% endif %}">
                        <span class="inline-flex items-center justify-center w-8 h-8 rounded-xl text-vivid-sky-blue">
                            <i class="fas fa-image"></i>
                        </span>
                        <span>My Photos</span>
                    </a>
                </nav>
            </aside>

            <!-- Main Photographer Dashboard Content -->
            <section class="flex-1 space-y-8">
                <!-- My Albums grid -->
                <div class="bg-white rounded-2xl shadow-md border border-gray-100 p-6">
                    <div class="flex items-center justify-between mb-4">
                        <div>
                            <h2 class="text-base font-semibold text-space-cadet">My Albums</h2>
                        </div>
                        <a href="{{ path('app_album_new') }}"
                           class="inline-flex items-center gap-2 px-3 py-1.5 rounded-full bg-vivid-sky-blue text-space-cadet text-xs font-medium shadow-sm hover:bg-blue-600 hover:text-anti-flash-white transition-all duration-200">
                            <i class="fas fa-folder-plus text-[11px]"></i>
                            <span>New Album</span>
                        </a>
                    </div>

                    {% if albums is not empty %}
                        <div class="grid gap-5 sm:grid-cols-2 lg:grid-cols-3">
                            {% for album in albums %}
                                <div class="bg-anti-flash-white rounded-xl border border-gray-100 overflow-hidden shadow-sm hover:shadow-md transition-all duration-200 flex flex-col">
                                    {% if album.coverImagePath %}
                                        <div class="h-40 bg-gray-100 overflow-hidden">
                                            <img src="{{ asset(album.coverImagePath) }}" alt="{{ album.title }}" class="w-full h-full object-cover">
                                        </div>
                                    {% else %}
                                        <div class="h-40 bg-gray-100 flex items-center justify-center text-slate-gray text-xs">
                                            No cover image
                                        </div>
                                    {% endif %}

                                    <div class="p-4 flex-1 flex flex-col">
                                        <h3 class="text-sm font-semibold text-space-cadet truncate">{{ album.title }}</h3>
                                        <p class="mt-1 text-xs text-slate-gray line-clamp-2">{{ album.description ?: 'No description provided.' }}</p>

                                        <div class="mt-3 flex items-center justify-between text-xs text-slate-gray">
                                            <span>{{ album.createdAt ? album.createdAt|date('M j, Y') : '—' }}</span>
                                            {% if album.isPublic %}
                                                <span class="inline-flex items-center px-2 py-0.5 rounded-full text-[11px] font-medium bg-accent-coral text-anti-flash-white">Public</span>
                                            {% else %}
                                                <span class="inline-flex items-center px-2 py-0.5 rounded-full text-[11px] font-medium bg-slate-gray text-anti-flash-white">Private</span>
                                            {% endif %}
                                        </div>

                                        <div class="mt-3 flex items-center gap-2">
                                            <a href="{{ path('app_album_show', {'id': album.id}) }}"
                                               class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-lg border border-gray-200 text-[11px] font-medium text-space-cadet hover:text-accent-coral transition-colors duration-200">
                                                <i class="fas fa-eye text-[10px]"></i>
                                                <span>View</span>
                                            </a>
                                            <a href="{{ path('app_album_edit', {'id': album.id}) }}"
                                               class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-lg border border-accent-coral text-[11px] font-medium text-accent-coral hover:bg-accent-coral hover:text-anti-flash-white transition-colors duration-200">
                                                <i class="fas fa-pen text-[10px]"></i>
                                                <span>Edit</span>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    {% else %}
                        <p class="text-sm text-slate-gray">You haven't created any albums yet.</p>
                    {% endif %}
                </div>

                <!-- My Photos grid -->
                <div class="bg-white rounded-2xl shadow-md border border-gray-100 p-6">
                    <div class="flex items-center justify-between mb-4">
                        <div>
                            <h2 class="text-base font-semibold text-space-cadet">My Photos</h2>
                        </div>
                        <a href="{{ path('app_photo_new') }}"
                           class="inline-flex items-center gap-2 px-3 py-1.5 rounded-full bg-vivid-sky-blue text-space-cadet text-xs font-medium shadow-sm hover:bg-blue-600 hover:text-anti-flash-white transition-all duration-200">
                            <i class="fas fa-cloud-upload-alt text-[11px]"></i>
                            <span>Upload Photo</span>
                        </a>
                    </div>

                    {% if photos is not empty %}
                        <div class="grid gap-5 sm:grid-cols-2 lg:grid-cols-3">
                            {% for photo in photos|slice(0, 12) %}
                                <div class="bg-anti-flash-white rounded-xl border border-gray-100 overflow-hidden shadow-sm hover:shadow-md transition-all duration-200 flex flex-col">
                                    <div class="relative h-44 bg-gray-100 overflow-hidden">
                                        <a href="{{ path('app_photo_show', {'id': photo.id}) }}">
                                            {% if photo.thumbnailPath %}
                                                <img src="{{ asset('uploads/thumbnails/' ~ photo.thumbnailPath) }}" alt="{{ photo.title }}" class="w-full h-full object-cover">
                                            {% else %}
                                                <img src="{{ asset('uploads/photos/' ~ photo.storagePath) }}" alt="{{ photo.title }}" class="w-full h-full object-cover">
                                            {% endif %}
                                        </a>
                                    </div>

                                    <div class="p-4 flex-1 flex flex-col">
                                        <h3 class="text-sm font-semibold text-space-cadet truncate">{{ photo.title }}</h3>
                                        {% if photo.caption %}
                                            <p class="mt-1 text-xs text-slate-gray line-clamp-2">{{ photo.caption }}</p>
                                        {% endif %}

                                        <div class="mt-3 flex items-center justify-between text-xs text-slate-gray">
                                            <span>{{ photo.createdAt ? photo.createdAt|date('M j, Y') : '—' }}</span>
                                            {% if photo.isPublic %}
                                                <span class="inline-flex items-center px-2 py-0.5 rounded-full text-[11px] font-medium bg-accent-coral text-anti-flash-white">Public</span>
                                            {% else %}
                                                <span class="inline-flex items-center px-2 py-0.5 rounded-full text-[11px] font-medium bg-slate-gray text-anti-flash-white">Private</span>
                                            {% endif %}
                                        </div>

                                        <div class="mt-3 flex items-center gap-2">
                                            <a href="{{ path('app_photo_show', {'id': photo.id}) }}"
                                               class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-lg border border-gray-200 text-[11px] font-medium text-space-cadet hover:text-accent-coral transition-colors duration-200">
                                                <i class="fas fa-eye text-[10px]"></i>
                                                <span>View</span>
                                            </a>
                                            <a href="{{ path('app_photo_edit', {'id': photo.id}) }}"
                                               class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-lg border border-accent-coral text-[11px] font-medium text-accent-coral hover:bg-accent-coral hover:text-anti-flash-white transition-colors duration-200">
                                                <i class="fas fa-pen text-[10px]"></i>
                                                <span>Edit</span>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    {% else %}
                        <p class="text-sm text-slate-gray">You haven't uploaded any photos yet.</p>
                    {% endif %}
                </div>
            </section>
        </div>
    </div>
</div>
{% endblock %}
