{% extends 'base.html.twig' %}

{% block title %}QwePic - Admin Dashboard{% endblock %}

{% block body %}
{% set currentRoute = app.request.attributes.get('_route') %}

<div class="min-h-screen bg-anti-flash-white px-4 py-6 lg:px-8 lg:py-8">
    <div class="max-w-7xl mx-auto">
        <!-- Header with title and back button -->
        <div class="flex items-center justify-between mb-8">
            <div>
                <h1 class="font-poppins font-semibold text-2xl lg:text-3xl text-space-cadet">Admin Dashboard</h1>
            </div>
            <a href="{{ path('app_home') }}"
               class="inline-flex items-center gap-2 px-4 py-2 rounded-full border border-gray-300 bg-white text-sm font-medium text-space-cadet shadow-sm hover:bg-anti-flash-white hover:border-accent-coral hover:text-accent-coral transition-all duration-200">
                <i class="fas fa-arrow-left text-xs"></i>
                <span>Back to Home</span>
            </a>
        </div>

        <div class="flex flex-col lg:flex-row gap-8">
            <!-- Admin Panel Navigation -->
            <aside class="w-full lg:w-64 bg-white shadow-md rounded-2xl p-5 border border-gray-100">
                <h2 class="text-xs font-semibold tracking-widest text-slate-gray uppercase mb-4">Admin Panel</h2>
                <nav class="space-y-1">
                    {% set baseItemClasses = 'flex items-center gap-3 px-3 py-2 rounded-xl text-sm font-medium transition-all duration-200 cursor-pointer' %}

                    <a href="{{ path('app_dashboard') }}"
                       class="{{ baseItemClasses }} {% if currentRoute == 'app_dashboard' %}bg-vivid-sky-blue text-space-cadet shadow-md{% else %}text-space-cadet hover:bg-gray-100{% endif %}">
                        <span class="inline-flex items-center justify-center w-8 h-8 rounded-xl text-space-cadet">
                            <i class="fas fa-chart-line"></i>
                        </span>
                        <span>Overview</span>
                    </a>

                    <a href="{{ path('app_user_index') }}"
                       class="{{ baseItemClasses }} {% if currentRoute starts with 'app_user_' %}bg-vivid-sky-blue text-anti-flash-white shadow-md{% else %}text-space-cadet hover:bg-gray-200{% endif %}">
                        <span class="inline-flex items-center justify-center w-8 h-8 rounded-xl bg-vivid-sky-blue/10 text-vivid-sky-blue">
                            <i class="fas fa-users"></i>
                        </span>
                        <span>User Management</span>
                    </a>

                    <a href="{{ path('app_album_index') }}"
                       class="{{ baseItemClasses }} {% if currentRoute starts with 'app_album_' %}bg-vivid-sky-blue text-anti-flash-white shadow-md{% else %}text-space-cadet hover:bg-gray-200{% endif %}">
                        <span class="inline-flex items-center justify-center w-8 h-8 rounded-xl bg-vivid-sky-blue/10 text-vivid-sky-blue">
                            <i class="fas fa-folder-open"></i>
                        </span>
                        <span>Albums Management</span>
                    </a>

                    <a href="{{ path('app_photo_index') }}"
                       class="{{ baseItemClasses }} {% if currentRoute starts with 'app_photo_' %}bg-vivid-sky-blue text-anti-flash-white shadow-md{% else %}text-space-cadet hover:bg-gray-200{% endif %}">
                        <span class="inline-flex items-center justify-center w-8 h-8 rounded-xl bg-vivid-sky-blue/10 text-vivid-sky-blue">
                            <i class="fas fa-image"></i>
                        </span>
                        <span>Photos Management</span>
                    </a>

                    <a href="{{ path('app_activity_log_index') }}"
                       class="{{ baseItemClasses }} {% if currentRoute starts with 'app_activity_log_' %}bg-vivid-sky-blue text-anti-flash-white shadow-md{% else %}text-space-cadet hover:bg-gray-200{% endif %}">
                        <span class="inline-flex items-center justify-center w-8 h-8 rounded-xl bg-vivid-sky-blue/10 text-vivid-sky-blue">
                            <i class="fas fa-clipboard-list"></i>
                        </span>
                        <span>Activity Logs</span>
                    </a>
                </nav>
            </aside>

            <!-- Main Dashboard Content -->
            <section class="flex-1">
                <!-- Analytics cards -->
                <div class="grid gap-6 md:grid-cols-3">
                    <div class="bg-white rounded-2xl shadow-md border border-gray-100 p-5 flex items-center justify-between">
                        <div>
                            <p class="text-xs font-medium text-slate-gray uppercase tracking-widest">Total Users</p>
                            <p class="mt-2 text-2xl font-semibold text-space-cadet">{{ totalUsers }}</p>
                            <p class="mt-1 text-xs text-slate-gray">
                                Admins: <span class="font-semibold text-space-cadet">{{ totalAdmins }}</span>
                                · Photographers: <span class="font-semibold text-space-cadet">{{ totalPhotographers }}</span>
                                · Users: <span class="font-semibold text-space-cadet">{{ totalRegularUsers }}</span>
                            </p>
                        </div>
                        <div class="w-10 h-10 rounded-xl bg-vivid-sky-blue/10 flex items-center justify-center text-accent-coral">
                            <i class="fas fa-users"></i>
                        </div>
                    </div>

                    <div class="bg-white rounded-2xl shadow-md border border-gray-100 p-5 flex items-center justify-between">
                        <div>
                            <p class="text-xs font-medium text-slate-gray uppercase tracking-widest">Total Photos</p>
                            <p class="mt-2 text-2xl font-semibold text-space-cadet">{{ totalPhotos }}</p>
                        </div>
                        <div class="w-10 h-10 rounded-xl bg-accent-coral/10 flex items-center justify-center text-accent-coral">
                            <i class="fas fa-image"></i>
                        </div>
                    </div>

                    <div class="bg-white rounded-2xl shadow-md border border-gray-100 p-5 flex items-center justify-between">
                        <div>
                            <p class="text-xs font-medium text-slate-gray uppercase tracking-widest">Total Albums</p>
                            <p class="mt-2 text-2xl font-semibold text-space-cadet">{{ totalAlbums }}</p>
                        </div>
                        <div class="w-10 h-10 rounded-xl bg-space-cadet/10 flex items-center justify-center text-accent-coral">
                            <i class="fas fa-folder-open"></i>
                        </div>
                    </div>
                </div>

                <!-- Recent activity + quick actions -->
                <div class="mt-8 grid gap-6 lg:grid-cols-3">
                    <div class="lg:col-span-2 bg-white rounded-2xl shadow-md border border-gray-100 p-6">
                        <div class="flex items-center justify-between mb-4">
                            <h2 class="text-base font-semibold text-space-cadet">Recent Activity</h2>
                            <span class="text-xs font-medium text-slate-gray uppercase tracking-widest">Latest logs</span>
                        </div>

                        {% if recentLogs is not empty %}
                            <ul class="divide-y divide-gray-100">
                                {% for log in recentLogs %}
                                    <li class="py-3 flex items-start gap-3">
                                        <div class="mt-1 w-8 h-8 rounded-full bg-vivid-sky-blue/10 flex items-center justify-center text-accent-coral">
                                            <i class="fas fa-bolt"></i>
                                        </div>
                                        <div class="flex-1 min-w-0">
                                            <p class="text-sm font-medium text-space-cadet truncate">
                                                {{ log.username }}
                                                <span class="font-normal text-slate-gray">{{ log.action }}</span>
                                            </p>
                                            <p class="mt-0.5 text-xs text-slate-gray">
                                                {% if log.entityType %}
                                                    {{ log.entityType }}
                                                {% else %}
                                                    General
                                                {% endif %}
                                                · {{ log.createdAt ? log.createdAt|date('M j, Y H:i') : 'N/A' }}
                                            </p>
                                        </div>
                                    </li>
                                {% endfor %}
                            </ul>
                        {% else %}
                            <p class="text-sm text-slate-gray">No recent activity logs yet.</p>
                        {% endif %}
                    </div>

                    <div class="bg-white rounded-2xl shadow-md border border-gray-100 p-6">
                        <h2 class="text-base font-semibold text-space-cadet mb-4">Quick Actions</h2>
                        <div class="space-y-3">
                            <a href="{{ path('app_user_new') }}" class="flex items-center justify-between px-3 py-2 rounded-xl border border-gray-200 text-sm text-space-cadet hover:border-vivid-sky-blue hover:bg-gray-50 transition-all duration-200">
                                <span class="flex items-center gap-2">
                                    <i class="fas fa-user-plus text-accent-coral"></i>
                                    <span>Create new user</span>
                                </span>
                                <i class="fas fa-chevron-right text-xs text-slate-gray"></i>
                            </a>

                            <a href="{{ path('app_album_new') }}" class="flex items-center justify-between px-3 py-2 rounded-xl border border-gray-200 text-sm text-space-cadet hover:border-vivid-sky-blue hover:bg-gray-50 transition-all duration-200">
                                <span class="flex items-center gap-2">
                                    <i class="fas fa-folder-plus text-accent-coral"></i>
                                    <span>Create new album</span>
                                </span>
                                <i class="fas fa-chevron-right text-xs text-slate-gray"></i>
                            </a>

                            <a href="{{ path('app_photo_new') }}" class="flex items-center justify-between px-3 py-2 rounded-xl border border-gray-200 text-sm text-space-cadet hover:border-vivid-sky-blue hover:bg-gray-50 transition-all duration-200">
                                <span class="flex items-center gap-2">
                                    <i class="fas fa-cloud-upload-alt text-accent-coral"></i>
                                    <span>Upload new photo</span>
                                </span>
                                <i class="fas fa-chevron-right text-xs text-slate-gray"></i>
                            </a>

                            <a href="{{ path('app_activity_log_index') }}" class="flex items-center justify-between px-3 py-2 rounded-xl border border-gray-200 text-sm text-space-cadet hover:border-vivid-sky-blue hover:bg-gray-50 transition-all duration-200">
                                <span class="flex items-center gap-2">
                                    <i class="fas fa-clipboard-list text-accent-coral"></i>
                                    <span>View all logs</span>
                                </span>
                                <i class="fas fa-chevron-right text-xs text-slate-gray"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
{% endblock %}
