{% extends 'base.html.twig' %}

{% block title %}QwePic - New Album{% endblock %}

{% block body %}
{% set currentRoute = app.request.attributes.get('_route') %}
{% set isAdmin = is_granted('ROLE_ADMIN') %}
<div class="min-h-screen bg-anti-flash-white px-4 py-6 lg:px-8 lg:py-8">
    <div class="max-w-7xl mx-auto">
        <div class="flex items-center justify-between mb-8">
            <div>
                <h1 class="font-poppins font-semibold text-2xl lg:text-3xl text-space-cadet">Create Album</h1>
            </div>
            <a href="{{ path('app_album_index') }}"
               class="inline-flex items-center gap-2 px-4 py-2 rounded-full border border-gray-300 bg-white text-sm font-medium text-space-cadet shadow-sm hover:border-accent-coral hover:text-accent-coral transition-all duration-200">
                <i class="fas fa-arrow-left text-xs"></i>
                <span>Back to Albums</span>
            </a>
        </div>

        <div class="flex flex-col lg:flex-row gap-8">
            <!-- Role-based Panel Navigation -->
            <aside class="w-full lg:w-64 bg-white shadow-md rounded-2xl p-5 border border-gray-100">
                {% if isAdmin %}
                    <h2 class="text-xs font-semibold tracking-widest text-slate-gray uppercase mb-4">Admin Panel</h2>
                    <nav class="space-y-1">
                        {% set baseItemClasses = 'flex items-center gap-3 px-3 py-2 rounded-xl text-sm font-medium transition-all duration-200 cursor-pointer' %}

                        <a href="{{ path('app_dashboard') }}"
                           class="{{ baseItemClasses }} {% if currentRoute == 'app_dashboard' %}bg-space-cadet text-anti-flash-white shadow-md{% else %}text-space-cadet hover:bg-gray-200{% endif %}">
                            <span class="inline-flex items-center justify-center w-8 h-8 rounded-xl text-vivid-sky-blue">
                                <i class="fas fa-chart-line"></i>
                            </span>
                            <span>Overview</span>
                        </a>

                        <a href="{{ path('app_user_index') }}"
                           class="{{ baseItemClasses }} {% if currentRoute starts with 'app_user_' %}bg-vivid-sky-blue text-anti-flash-white shadow-md{% else %}text-space-cadet hover:bg-gray-200{% endif %}">
                            <span class="inline-flex items-center justify-center w-8 h-8 rounded-xl text-vivid-sky-blue">
                                <i class="fas fa-users"></i>
                            </span>
                            <span>User Management</span>
                        </a>

                        <a href="{{ path('app_album_index') }}"
                           class="{{ baseItemClasses }} {% if currentRoute starts with 'app_album_' %}bg-vivid-sky-blue text-space-cadet shadow-md{% else %}text-space-cadet hover:bg-gray-200{% endif %}">
                            <span class="inline-flex items-center justify-center w-8 h-8 rounded-xl text-space-cadet">
                                <i class="fas fa-folder-open"></i>
                            </span>
                            <span>Albums Management</span>
                        </a>

                        <a href="{{ path('app_photo_index') }}"
                           class="{{ baseItemClasses }} {% if currentRoute starts with 'app_photo_' %}bg-vivid-sky-blue text-anti-flash-white shadow-md{% else %}text-space-cadet hover:bg-gray-200{% endif %}">
                            <span class="inline-flex items-center justify-center w-8 h-8 rounded-xl bg-vivid-sky-blue/10 text-vivid-sky-blue">
                                <i class="fas fa-image"></i>
                            </span>
                            <span>Photos Management</span>
                        </a>

                        <a href="{{ path('app_admin_booking_index') }}"
                           class="{{ baseItemClasses }} {% if currentRoute starts with 'app_admin_booking_' %}bg-vivid-sky-blue text-space-cadet shadow-md{% else %}text-space-cadet hover:bg-gray-200{% endif %}">
                            <span class="inline-flex items-center justify-center w-8 h-8 rounded-xl text-vivid-sky-blue">
                                <i class="fas fa-calendar-check"></i>
                            </span>
                            <span>Bookings</span>
                        </a>

                        <a href="{{ path('app_activity_log_index') }}"
                           class="{{ baseItemClasses }} {% if currentRoute starts with 'app_activity_log_' %}bg-vivid-sky-blue text-anti-flash-white shadow-md{% else %}text-space-cadet hover:bg-gray-200{% endif %}">
                            <span class="inline-flex items-center justify-center w-8 h-8 rounded-xl bg-vivid-sky-blue/10 text-vivid-sky-blue">
                                <i class="fas fa-clipboard-list"></i>
                            </span>
                            <span>Activity Logs</span>
                        </a>
                    </nav>
                {% else %}
                    <h2 class="text-xs font-semibold tracking-widest text-slate-gray uppercase mb-4">Photographer Panel</h2>
                    <nav class="space-y-1">
                        {% set baseItemClasses = 'flex items-center gap-3 px-3 py-2 rounded-xl text-sm font-medium transition-all duration-200 cursor-pointer' %}

                        <a href="{{ path('app_dashboard') }}"
                           class="{{ baseItemClasses }} {% if currentRoute == 'app_dashboard' %}bg-vivid-sky-blue text-space-cadet shadow-md{% else %}text-space-cadet hover:bg-gray-100{% endif %}">
                            <span class="inline-flex items-center justify-center w-8 h-8 rounded-xl text-vivid-sky-blue">
                                <i class="fas fa-chart-line"></i>
                            </span>
                            <span>Overview</span>
                        </a>

                        <a href="{{ path('app_album_index') }}"
                           class="{{ baseItemClasses }} {% if currentRoute starts with 'app_album_' %}bg-vivid-sky-blue text-space-cadet shadow-md{% else %}text-space-cadet hover:bg-gray-100{% endif %}">
                            <span class="inline-flex items-center justify-center w-8 h-8 rounded-xl text-space-cadet">
                                <i class="fas fa-folder-open"></i>
                            </span>
                            <span>My Albums</span>
                        </a>

                        <a href="{{ path('app_photo_index') }}"
                           class="{{ baseItemClasses }} {% if currentRoute starts with 'app_photo_' %}bg-vivid-sky-blue text-space-cadet shadow-md{% else %}text-space-cadet hover:bg-gray-100{% endif %}">
                            <span class="inline-flex items-center justify-center w-8 h-8 rounded-xl text-vivid-sky-blue">
                                <i class="fas fa-image"></i>
                            </span>
                            <span>My Photos</span>
                        </a>

                        <a href="{{ path('app_photographer_booking_index') }}"
                           class="{{ baseItemClasses }} {% if currentRoute starts with 'app_photographer_booking_' %}bg-vivid-sky-blue text-space-cadet shadow-md{% else %}text-space-cadet hover:bg-gray-100{% endif %}">
                            <span class="inline-flex items-center justify-center w-8 h-8 rounded-xl text-vivid-sky-blue">
                                <i class="fas fa-calendar-check"></i>
                            </span>
                            <span>Bookings</span>
                        </a>
                    </nav>
                {% endif %}
            </aside>

            <!-- New album form content -->
            <section class="flex-1">
                <div class="bg-white rounded-2xl shadow-md border border-gray-100 p-6">
                    {{ include('album/_form.html.twig') }}

                    <div class="mt-4 pt-4 border-t border-gray-100 flex justify-end">
                        <button type="submit" form="{{ form.vars.id }}"
                                class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-vivid-sky-blue text-space-cadet text-sm font-medium shadow-sm hover:bg-blue-600 hover:text-anti-flash-white cursor-pointer transition-all duration-200">
                            <i class="fas fa-save text-xs"></i>
                            <span>Create</span>
                        </button>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
{% endblock %}
