{% extends 'base.html.twig' %}

{% block title %}QwePic - Album Management{% endblock %}

{% block body %}
{% set currentRoute = app.request.attributes.get('_route') %}
{% set isAdmin = is_granted('ROLE_ADMIN') %}
<div class="min-h-screen bg-anti-flash-white px-4 py-6 lg:px-8 lg:py-8">
    <div class="max-w-7xl mx-auto">
        {% if isAdmin %}
            <div class="flex items-center justify-between mb-8">
                <div>
                    <h1 class="font-poppins font-semibold text-2xl lg:text-3xl text-space-cadet">Album Management</h1>
                </div>
                <a href="{{ path('app_album_new') }}"
                   class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-vivid-sky-blue text-space-cadet text-sm font-medium shadow-sm hover:bg-blue-600 hover:text-anti-flash-white transition-all duration-200">
                    <i class="fas fa-folder-plus text-xs"></i>
                    <span>Add Album</span>
                </a>
            </div>

            <div class="flex flex-col lg:flex-row gap-8">
                <!-- Admin Panel Navigation -->
                <aside class="w-full lg:w-64 bg-white shadow-md rounded-2xl p-5 border border-gray-100">
                    <h2 class="text-xs font-semibold tracking-widest text-slate-gray uppercase mb-4">Admin Panel</h2>
                    <nav class="space-y-1">
                        {% set baseItemClasses = 'flex items-center gap-3 px-3 py-2 rounded-xl text-sm font-medium transition-all duration-200 cursor-pointer' %}

                        <a href="{{ path('app_dashboard') }}"
                           class="{{ baseItemClasses }} {% if currentRoute == 'app_dashboard' %}bg-space-cadet text-anti-flash-white shadow-md{% else %}text-space-cadet hover:bg-gray-200{% endif %}">
                            <span class="inline-flex items-center justify-center w-8 h-8 rounded-xl text-vivid-sky-blue">
                                <i class="fas fa-chart-line"></i>
                            </span>
                            <span>Overview</span>
                        </a>

                        <a href="{{ path('app_user_index') }}"
                           class="{{ baseItemClasses }} {% if currentRoute starts with 'app_user_' %}bg-vivid-sky-blue text-anti-flash-white shadow-md{% else %}text-space-cadet hover:bg-gray-200{% endif %}">
                            <span class="inline-flex items-center justify-center w-8 h-8 rounded-xl text-vivid-sky-blue">
                                <i class="fas fa-users"></i>
                            </span>
                            <span>User Management</span>
                        </a>

                        <a href="{{ path('app_album_index') }}"
                           class="{{ baseItemClasses }} {% if currentRoute starts with 'app_album_' %}bg-vivid-sky-blue text-space-cadet shadow-md{% else %}text-space-cadet hover:bg-gray-200{% endif %}">
                            <span class="inline-flex items-center justify-center w-8 h-8 rounded-xl text-space-cadet">
                                <i class="fas fa-folder-open"></i>
                            </span>
                            <span>Albums Management</span>
                        </a>

                        <a href="{{ path('app_photo_index') }}"
                           class="{{ baseItemClasses }} {% if currentRoute starts with 'app_photo_' %}bg-vivid-sky-blue text-anti-flash-white shadow-md{% else %}text-space-cadet hover:bg-gray-200{% endif %}">
                            <span class="inline-flex items-center justify-center w-8 h-8 rounded-xl bg-vivid-sky-blue/10 text-vivid-sky-blue">
                                <i class="fas fa-image"></i>
                            </span>
                            <span>Photos Management</span>
                        </a>

                        <a href="{{ path('app_activity_log_index') }}"
                           class="{{ baseItemClasses }} {% if currentRoute starts with 'app_activity_log_' %}bg-vivid-sky-blue text-anti-flash-white shadow-md{% else %}text-space-cadet hover:bg-gray-200{% endif %}">
                            <span class="inline-flex items-center justify-center w-8 h-8 rounded-xl bg-vivid-sky-blue/10 text-vivid-sky-blue">
                                <i class="fas fa-clipboard-list"></i>
                            </span>
                            <span>Activity Logs</span>
                        </a>
                    </nav>
                </aside>

                <!-- Album table content -->
                <section class="flex-1">
                    <div class="bg-white rounded-2xl shadow-md border border-gray-100 p-5">
                        <div class="flex items-center justify-between mb-4">
                            <h2 class="text-base font-semibold text-space-cadet">All Albums</h2>
                            <span class="text-xs font-medium text-slate-gray">{{ albums|length }} total</span>
                        </div>

                        {% if albums is not empty %}
                            <div class="overflow-x-auto">
                                <table class="min-w-full text-left text-sm">
                                    <thead class="border-b border-gray-200 text-slate-gray text-xs uppercase tracking-wider">
                                        <tr>
                                            <th scope="col" class="py-2 pr-4 font-medium">Title</th>
                                            <th scope="col" class="py-2 pr-4 font-medium">Photographer</th>
                                            <th scope="col" class="py-2 pr-4 font-medium">Visibility</th>
                                            <th scope="col" class="py-2 pr-4 font-medium">Created</th>
                                            <th scope="col" class="py-2 pr-0 font-medium text-right">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody class="divide-y divide-gray-100">
                                    {% for album in albums %}
                                        <tr class="hover:bg-gray-50 transition-colors">
                                            <td class="py-3 pr-4 text-space-cadet font-medium truncate max-w-xs">{{ album.title }}</td>
                                            <td class="py-3 pr-4 text-slate-gray">
                                                {{ album.photographer ? album.photographer.username ?? album.photographer.email ?? ('#' ~ album.photographer.id) : 'N/A' }}
                                            </td>
                                            <td class="py-3 pr-4">
                                                {% if album.isPublic %}
                                                    <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-accent-coral text-anti-flash-white">
                                                        Public
                                                    </span>
                                                {% else %}
                                                    <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-slate-gray text-anti-flash-white">
                                                        Private
                                                    </span>
                                                {% endif %}
                                            </td>
                                            <td class="py-3 pr-4 text-slate-gray text-xs">
                                                {{ album.createdAt ? album.createdAt|date('M j, Y') : '—' }}
                                            </td>
                                            <td class="py-3 pr-0 text-right">
                                                <div class="inline-flex items-center gap-2">
                                                    <a href="{{ path('app_album_show', {'id': album.id}) }}"
                                                       class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-lg border border-gray-200 text-xs font-medium text-space-cadet hover:text-accent-coral transition-colors duration-200">
                                                        <i class="fas fa-eye text-[11px]"></i>
                                                        <span>View</span>
                                                    </a>
                                                    <a href="{{ path('app_album_edit', {'id': album.id}) }}"
                                                       class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-lg border border-accent-coral text-xs font-medium text-accent-coral hover:bg-accent-coral hover:text-anti-flash-white transition-colors duration-200">
                                                        <i class="fas fa-pen text-[11px]"></i>
                                                        <span>Edit</span>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        {% else %}
                            <p class="text-sm text-slate-gray">No albums found yet.</p>
                        {% endif %}
                    </div>
                </section>
            </div>
        {% else %}
            <div class="flex items-center justify-between mb-8">
                <div>
                    <h1 class="font-poppins font-semibold text-2xl lg:text-3xl text-space-cadet">My Albums</h1>
                </div>
                <a href="{{ path('app_album_new') }}"
                   class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-vivid-sky-blue text-space-cadet text-sm font-medium shadow-sm hover:bg-blue-600 hover:text-anti-flash-white transition-all duration-200">
                    <i class="fas fa-folder-plus text-xs"></i>
                    <span>New Album</span>
                </a>
            </div>

            <div class="flex flex-col lg:flex-row gap-8">
                <aside class="w-full lg:w-64 bg-white shadow-md rounded-2xl p-5 border border-gray-100">
                    <h2 class="text-xs font-semibold tracking-widest text-slate-gray uppercase mb-4">Photographer Panel</h2>
                    <nav class="space-y-1">
                        {% set baseItemClasses = 'flex items-center gap-3 px-3 py-2 rounded-xl text-sm font-medium transition-all duration-200 cursor-pointer' %}

                        <a href="{{ path('app_dashboard') }}"
                           class="{{ baseItemClasses }} {% if currentRoute == 'app_dashboard' %}bg-vivid-sky-blue text-space-cadet shadow-md{% else %}text-space-cadet hover:bg-gray-100{% endif %}">
                            <span class="inline-flex items-center justify-center w-8 h-8 rounded-xl text-vivid-sky-blue">
                                <i class="fas fa-chart-line"></i>
                            </span>
                            <span>Overview</span>
                        </a>

                        <a href="{{ path('app_album_index') }}"
                           class="{{ baseItemClasses }} {% if currentRoute starts with 'app_album_' %}bg-vivid-sky-blue text-space-cadet shadow-md{% else %}text-space-cadet hover:bg-gray-100{% endif %}">
                            <span class="inline-flex items-center justify-center w-8 h-8 rounded-xl text-space-cadet">
                                <i class="fas fa-folder-open"></i>
                            </span>
                            <span>My Albums</span>
                        </a>

                        <a href="{{ path('app_photo_index') }}"
                           class="{{ baseItemClasses }} {% if currentRoute starts with 'app_photo_' %}bg-vivid-sky-blue text-space-cadet shadow-md{% else %}text-space-cadet hover:bg-gray-100{% endif %}">
                            <span class="inline-flex items-center justify-center w-8 h-8 rounded-xl text-vivid-sky-blue">
                                <i class="fas fa-image"></i>
                            </span>
                            <span>My Photos</span>
                        </a>
                    </nav>
                </aside>

                <section class="flex-1">
                    <div class="bg-white rounded-2xl shadow-md border border-gray-100 p-6">
                        <div class="flex items-center justify-between mb-4">
                            <div>
                                <h2 class="text-base font-semibold text-space-cadet">My Albums</h2>
                            </div>
                            <span class="text-xs font-medium text-slate-gray">{{ albums|length }} total</span>
                        </div>

                        {% if albums is not empty %}
                            <div class="grid gap-5 sm:grid-cols-2 lg:grid-cols-3">
                                {% for album in albums %}
                                    <div class="bg-anti-flash-white rounded-xl border border-gray-100 overflow-hidden shadow-sm hover:shadow-md transition-all duration-200 flex flex-col">
                                        {% if album.coverImagePath %}
                                            <div class="h-40 bg-gray-100 overflow-hidden">
                                                <img src="{{ asset(album.coverImagePath) }}" alt="{{ album.title }}" class="w-full h-full object-cover">
                                            </div>
                                        {% else %}
                                            <div class="h-40 bg-gray-100 flex items-center justify-center text-slate-gray text-xs">
                                                No cover image
                                            </div>
                                        {% endif %}

                                        <div class="p-4 flex-1 flex flex-col">
                                            <h3 class="text-sm font-semibold text-space-cadet truncate">{{ album.title }}</h3>
                                            <p class="mt-1 text-xs text-slate-gray line-clamp-2">{{ album.description ?: 'No description provided.' }}</p>

                                            <div class="mt-3 flex items-center justify-between text-xs text-slate-gray">
                                                <span>{{ album.createdAt ? album.createdAt|date('M j, Y') : '—' }}</span>
                                                {% if album.isPublic %}
                                                    <span class="inline-flex items-center px-2 py-0.5 rounded-full text-[11px] font-medium bg-accent-coral text-anti-flash-white">Public</span>
                                                {% else %}
                                                    <span class="inline-flex items-center px-2 py-0.5 rounded-full text-[11px] font-medium bg-slate-gray text-anti-flash-white">Private</span>
                                                {% endif %}
                                            </div>

                                            <div class="mt-3 flex items-center gap-2">
                                                <a href="{{ path('app_album_show', {'id': album.id}) }}"
                                                   class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-lg border border-gray-200 text-[11px] font-medium text-space-cadet hover:text-accent-coral transition-colors duration-200">
                                                    <i class="fas fa-eye text-[10px]"></i>
                                                    <span>View</span>
                                                </a>
                                                <a href="{{ path('app_album_edit', {'id': album.id}) }}"
                                                   class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-lg border border-accent-coral text-[11px] font-medium text-accent-coral hover:bg-accent-coral hover:text-anti-flash-white transition-colors duration-200">
                                                    <i class="fas fa-pen text-[10px]"></i>
                                                    <span>Edit</span>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        {% else %}
                            <p class="text-sm text-slate-gray">You haven't created any albums yet.</p>
                        {% endif %}
                    </div>
                </section>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}
